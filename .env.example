# Authentication
NEXTAUTH_SECRET=your-very-long-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# Turso Database (for production)
# Get these from https://turso.tech dashboard
TURSO_DATABASE_URL=libsql://your-database-name-your-org.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Cloudflare R2 Storage (for PDF storage on serverless)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=thegutguru-invoices

# Email Sync (optional - can also be set in Settings UI)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# HungerBox Sales Worker (TheGutGuru Worker)
# URL of your Hugging Face Space or other worker deployment
HUNGERBOX_WORKER_URL=https://hf.space/your-user/your-worker/api/sync
# API Key for secure communication between this app and the worker
WORKER_API_KEY=your-secure-api-key
